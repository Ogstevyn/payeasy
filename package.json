{
  "name": "payeasy-monorepo",
  "version": "0.0.1",
  "description": "Stellar-based rent sharing platform",
  "private": true,
  "workspaces": [
    "apps/*",
    "contracts/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=apps/web",
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces",
    "lint": "npm run lint --workspaces",
    "format": "prettier --write ."
  },
  "devDependencies": {
    "prettier": "^3.0.0",
    "prettier-plugin-tailwindcss": "^0.5.0"
  },
  "keywords": [
    "stellar",
    "soroban",
    "rent",
    "blockchain"
  ],
  "author": "Ogstevyn",
  "license": "MIT"
}
